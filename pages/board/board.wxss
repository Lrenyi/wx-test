/* pages/board/board.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
}
canvas {
  background-color: #fff;
  flex: 1;
}
.toolbar {
  height: 50px;
  display: flex;
}
.colorbar {
  height: 50px;
  display: flex;
}
.color {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin: 10px 5px;
  opacity: 0.2;
}
.btn {
  height: 30px;
  width: 40px;
  border-radius: 15px;
  font-size: 14px;
  opacity: 1;
  margin: 10px 5px;
  line-height: 30px;
  text-align: center;
}
.color.current {
  opacity: 1;
}
.sliderbar {
  flex: 1;
  display: flex;
  align-items: center;
}
.sliderbar slider {
  width: 100%;
}