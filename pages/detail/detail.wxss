/* pages/detail/detail.wxss */
page{
  height:100%;
  background: #f3c1c8
}
.buy-bar{
  width:100%;
  height:60px;
  display: flex;
  position: fixed;
  left:0;
  bottom:0;
  z-index: 999999;
}
.add-cart,.buy{
  width:450rpx;
  height:60px;
  line-height: 60px;
  text-align: center;
  background: #fc87aefd;
  font-size: 16px;
  color: #fff;
}
.buy{
  width:300rpx;
  background: #f33f3f;
}
.detail{
  height:120px;
}
.title{
  font-size: 16px;
  height:80px;
  padding:15px;
  box-sizing: border-box;
}
.price{
  font-size: 20px;
  height:30px;
  line-height: 30px;
  padding:0 15px;
  color:#f00;
  box-sizing: border-box;
}
.num{
  height: 30px;
  line-height: 40px;
  font-size: 12px;
  color:#6b6262;
  margin:0 15px;
}
.detail-content{
  width:100%;
}